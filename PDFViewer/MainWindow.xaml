<Window x:Class="PDFViewerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFViewerDemo"
        xmlns:core="clr-namespace:PdfViewer.Core;assembly=PdfViewer.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <core:PdfViewer FileSource="{Binding PdfPath}" ItemWidth="80" ItemHeight="80" SelectedIndex="0"/>
    </Grid>
</Window>
