<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewer="clr-namespace:PdfViewer.Core"
                    
                    >
    <Style TargetType="{x:Type viewer:PdfPageItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type viewer:PdfPageItem}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Image Source="{TemplateBinding PageItemSource}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                               Stretch="{TemplateBinding ImageStretch}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>